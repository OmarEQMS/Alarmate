<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="mx.tec.alarmate">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ListAlarms"
            android:label="@string/title_activity_list_alarms"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EditAlarm"
            android:parentActivityName=".ListAlarms">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EditAlarm" />
        </activity>
        <activity
            android:name=".EditPuzzle"
            android:parentActivityName=".EditAlarm">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".EditPuzzle" />
        </activity>
    </application>

</manifest>